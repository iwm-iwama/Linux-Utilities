#!/bin/dash
# Ver.iwm20241112

##iwm_SubPkgInstall "yad"

Title="Openbox ショートカットキー"

Text=$(cat <<EOD
<span face="system-ui" font-size="12pt" foreground="#222"><span background="#f20" foreground="#fff"> 音量 </span>
<span face="monospace" foreground="#f80">  On/Off  </span>[Ctrl]+[F1]
<span face="monospace" foreground="#f22">  -2%     </span>[Ctrl]+[F2]
<span face="monospace" foreground="#f22">  +2%     </span>[Ctrl]+[F3]
<span face="monospace" foreground="#f80">  -10%    </span>[Ctrl]+[Shift]+[F2]
<span face="monospace" foreground="#f80">  +10%    </span>[Ctrl]+[Shift]+[F3]
</span>
<span face="system-ui" font-size="12pt" foreground="#222"><span background="#f20" foreground="#fff"> 輝度 </span>
<span face="monospace" foreground="#f22">  -2%     </span>[Ctrl]+[F5]
<span face="monospace" foreground="#f22">  +2%     </span>[Ctrl]+[F6]
<span face="monospace" foreground="#f80">  -10%    </span>[Ctrl]+[Shift]+[F5]
<span face="monospace" foreground="#f80">  +10%    </span>[Ctrl]+[Shift]+[F6]
</span>
EOD
)

yad \
	--title="${Title}" \
	--text="${Text}" \
	--button="gtk-close:0" \
	--width="300" \
	--fixed \
	--center \
	--on-top \
	2>/dev/null
